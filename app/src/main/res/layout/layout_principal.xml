<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@drawable/img_7"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_margin="20dp"
        android:background="@drawable/customer_edittext"
        app:cardCornerRadius="30sp"
        app:cardElevation="20sp"
        android:layout_marginTop="25sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="15dp">

            <ImageView
                android:id="@+id/img"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginVertical="30dp"
                android:src="@drawable/fondo" />

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="230sp"
                android:layout_margin="8sp"
                android:stretchColumns="1">

                <TableRow
                    android:background="@drawable/customer_edittext"
                    android:layout_margin="5sp">

                    <ImageButton
                        android:id="@+id/Ibtn_consulta"
                        android:layout_width="135sp"
                        android:layout_height="95sp"
                        android:layout_margin="5sp"
                        android:background="@drawable/ic_doctor"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <ImageButton
                        android:id="@+id/Ibtn_emergencia"
                        android:layout_width="120sp"
                        android:layout_height="95sp"
                        android:layout_margin="5sp"
                        android:paddingRight="5sp"
                        android:background="@drawable/ic_emergenc"
                        tools:ignore="SpeakableTextPresentCheck" />
                </TableRow>

                <TableRow
                    android:background="@drawable/customer_edittext"
                    android:layout_margin="5sp">

                    <ImageButton
                        android:id="@+id/Ibtn_medicamento"
                        android:layout_width="130sp"
                        android:layout_height="95sp"
                        android:layout_margin="5sp"
                        android:background="@drawable/ic_medicament"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <ImageButton
                        android:id="@+id/Ibtn_alarma"
                        android:layout_width="95sp"
                        android:layout_height="match_parent"
                        android:layout_margin="5sp"
                        android:background="@drawable/ic_alarma"
                        tools:ignore="SpeakableTextPresentCheck" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TableLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow>

            <Button
                android:id="@+id/btn_atrasP"
                android:layout_width="160sp"
                android:layout_height="65sp"
                android:layout_marginTop="10sp"
                android:backgroundTint="#f00"
                android:drawableLeft="@drawable/ic_back"
                android:text="@string/atras"
                android:textStyle="bold"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/btn_salirP"
                android:layout_width="160sp"
                android:layout_height="65sp"
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                android:layout_marginLeft="12sp"
                android:backgroundTint="#f00"
                android:drawableEnd="@drawable/ic_salir"
                android:text="@string/txt_salir"
                app:cornerRadius="30dp" />
        </TableRow>
    </TableLayout>

</LinearLayout>