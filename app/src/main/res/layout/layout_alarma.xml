<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cornerRadius="http://schemas.android.com/tools"
    android:padding="15sp"
    android:background="@drawable/img_7"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgAgregarAlama"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:background="@drawable/ic_add"
            android:backgroundTint="#f00"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="320sp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alarma"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="35sp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true"
        android:backgroundTint="@color/white"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/txt_alarma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="Nombre de la alarma"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
               />

            <LinearLayout
                android:id="@+id/layoutA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/txt_alarma">

                <TextView
                    android:id="@+id/txt_descripAlarma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Descripcion de la alarma..."
                    android:textColor="@color/black"
                    android:layout_below="@+id/txt_alarma"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="60sp"
                    android:layout_height="30sp"
                    android:layout_toRightOf="@+id/txt_descripAlarma"
                    app:showText="true"
                    android:layout_marginLeft="90sp"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/layoutA"
                android:layout_marginLeft="10dp">

                <Button
                    android:id="@+id/btn_editarAlarma"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="Edit"
                    app:cornerRadius="25sp"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:drawableLeft="@drawable/ic_edit"
                    android:backgroundTint="#f00"
                   />

                <Button
                    android:id="@+id/btn_eliminarAlarma"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="Delete"
                    android:layout_marginLeft="15sp"
                    android:drawableLeft="@drawable/ic_delete"
                    app:cornerRadius="25sp"
                    android:textStyle="bold"
                    android:backgroundTint="#f00"
                    />

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_gravity="center"
       android:layout_marginTop="260sp">

       <Button
           android:id="@+id/btn_atrasAlarma"
           android:layout_width="150sp"
           android:layout_height="60sp"
           android:text="Atras"
           android:backgroundTint="#f00"
           android:textStyle="bold"
           app:cornerRadius="25sp"
           android:drawableLeft="@drawable/ic_back"
           android:layout_marginRight="50sp"/>

       <Button
           android:id="@+id/btn_salirAlarma"
           android:layout_width="150sp"
           android:layout_height="60sp"
           android:text="Salir"
           android:backgroundTint="#f00"
           app:cornerRadius="25sp"
           android:drawableRight="@drawable/ic_salir"/>
   </LinearLayout>



</LinearLayout>