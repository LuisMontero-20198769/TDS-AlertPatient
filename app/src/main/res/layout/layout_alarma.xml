<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15sp"
    android:background="@drawable/img_7"
    android:orientation="vertical">




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/customer_edittext"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="12sp"
            android:orientation="vertical"
            android:padding="8dp">


            <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="0sp"
            android:src="@drawable/icono_alarma"
            android:contentDescription="@string/todo" />

            <EditText
                android:id="@+id/text_recordar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginVertical="15dp"
                android:background="@drawable/customer_edittext"
                android:drawableLeft="@drawable/ic_recordar"
                android:drawablePadding="8sp"
                android:hint="Recordatorio...."
                android:padding="8sp"
                android:inputType="text"
                android:autofillHints="" />

            <EditText
                android:id="@+id/text_hora"
                android:layout_width="match_parent"
                android:layout_height="51sp"
                android:background="@drawable/customer_edittext"
                android:drawableLeft="@drawable/ic_hora"
                android:ems="15"
                android:drawablePadding="8sp"
                android:hint="Hora a establecer ..."
                android:inputType="number"
                android:padding="8sp"

               />

            <EditText
                android:id="@+id/text_minutos"
                android:layout_width="match_parent"
                android:layout_height="51sp"
                android:background="@drawable/customer_edittext"
                android:drawableLeft="@drawable/ic_minutos"
                android:layout_marginTop="15sp"
                android:ems="15"
                android:hint="Minutos ...."
                android:drawablePadding="8sp"
                android:inputType="number"
                android:padding="8sp"
                />

            <EditText
                android:id="@+id/text_dia"
                android:layout_width="match_parent"
                android:layout_height="51sp"
                android:background="@drawable/customer_edittext"
                android:drawableLeft="@drawable/ic_edad"
                android:layout_marginTop="15sp"
                android:ems="15"
                android:hint="Dia ...."
                android:drawablePadding="8sp"
                android:inputType="text"
                android:padding="8sp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/btn_establecer"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="#f00"
                    android:drawableRight="@drawable/ic_send"
                    android:text="Establecer"
                    android:textSize="12sp"
                    app:cornerRadius="30dp"
                    android:textStyle="bold"
                    />

                <Button
                    android:id="@+id/btn_cancelarAlarm"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:backgroundTint="#f00"
                    android:drawableRight="@drawable/ic_cancelar"
                    android:text="Cancelar"
                    android:textSize="12sp"
                    app:cornerRadius="30dp"
                    android:textStyle="bold"/>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_salirApp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="end"
        android:layout_marginRight="20sp"
        android:layout_marginTop="3sp"
        android:backgroundTint="#f00"
        android:drawableRight="@drawable/ic_salir"
        android:text="Salir"
        android:textSize="15sp"
        android:textStyle="bold"
        app:cornerRadius="30dp" />

</LinearLayout>