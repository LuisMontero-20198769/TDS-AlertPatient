<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/img_7">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:layout_margin="30dp"
        app:cardCornerRadius="30sp"
        app:cardElevation="20sp"
        android:background="@drawable/customer_edittext">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingTop="50dp"
            android:textColor="#f00"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="Llamar a Emergencias (911):"/>

        <ImageButton
            android:id="@+id/btn_llmada_emergencia"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="300sp"
            android:src="@drawable/img_6"/>


    </androidx.cardview.widget.CardView>

    <Button
    android:id="@+id/btn_cancelarC"
    android:layout_width="160sp"
    android:layout_height="60sp"
    android:layout_margin="10sp"
    app:cornerRadius="30dp"
        android:layout_gravity="right"
    android:text="Cancelar"
    android:backgroundTint="#f00"
    android:drawableLeft="@drawable/ic_cancelar"/>

</LinearLayout>